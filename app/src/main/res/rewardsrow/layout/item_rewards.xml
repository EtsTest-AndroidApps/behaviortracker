<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:parentTag="androidx.cardview.widget.CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_timer_card">

        <ImageView
            android:id="@+id/rewards_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_rewards_card_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/pie"/>

        <TextView
            android:id="@+id/rewards_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space_1_5"
            android:layout_marginEnd="@dimen/default_space_1_5"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="@dimen/default_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rewards_price"
            app:layout_constraintTop_toBottomOf="@id/rewards_background"
            tools:text="Marshmallow"/>

        <TextView
            android:id="@+id/rewards_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_1_5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="@dimen/default_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rewards_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rewards_background"
            tools:text="0.59 â‚¬"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>