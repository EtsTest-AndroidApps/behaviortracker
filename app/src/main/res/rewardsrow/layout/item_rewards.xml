<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.v7.widget.CardView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_timer_card">

        <ImageView
            android:id="@+id/rewards_icon"
            android:layout_width="@dimen/item_rewards_icon_size"
            android:layout_height="@dimen/item_rewards_icon_size"
            android:layout_marginBottom="@dimen/default_space_1_5"
            android:layout_marginStart="@dimen/default_space_1_5"
            android:layout_marginTop="@dimen/default_space_1_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/rewards_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_1_5"
            android:layout_marginStart="@dimen/default_space_1_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rewards_icon"
            app:layout_constraintRight_toLeftOf="@id/rewards_price"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Marshmallow" />

        <TextView
            android:id="@+id/rewards_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_1_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rewards_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0.59 â‚¬" />

    </android.support.constraint.ConstraintLayout>

</merge>